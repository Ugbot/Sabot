# Include all package files
include sabot/py.typed
include README.md
include LICENSE
include requirements*.txt

# Include examples (but not as part of the installed package)
# recursive-include examples *.py

# Include configuration files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info

# Include Cython source files
recursive-include sabot *.pyx
recursive-include sabot *.pxi

# Include C/C++ files generated by Cython
recursive-include sabot *.c
recursive-include sabot *.cpp
recursive-include sabot *.h

# Include build files that might be needed
include setup.py
include pyproject.toml

# Exclude test files from installation
exclude tests/*
exclude examples/*
exclude docs/*
